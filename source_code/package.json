{
  "name": "clothing-store",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "bun run clean && cross-env NODE_ENV=production remix vite:build",
    "clean": "rimraf build",
    "dev": "remix vite:dev",
    "format": "prettier --write .",
    "postinstall": "bunx prisma generate",
    "nuke": "bun run clean && rimraf node_modules package-lock.json && bun i",
    "setup": "bunx prisma db push && bunx prisma db seed",
    "setup:db": "bunx prisma db push && bunx prisma db seed",
    "start": "bun run build && cross-env NODE_ENV=production node ./server.mjs",
    "typecheck": "tsc",
    "validate": "bun run lint && bun run typecheck"
  },
